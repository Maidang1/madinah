---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Time from '../../components/Time.astro';
import { calculateReadingTime } from '../../utils/reading-time';

const posts = await getCollection('blog');

// Calculate reading time and sort
const postsWithReadingTime = posts.map(post => ({
  ...post,
  readingTime: calculateReadingTime(post.body)
}));

postsWithReadingTime.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Blog - Madinah">
  <div class="space-y-8">
    <h1 class="text-text-primary text-4xl font-bold tracking-tight sm:text-5xl">
      Blog
    </h1>

    <div class="grid grid-cols-1 gap-6">
      {postsWithReadingTime.map(post => (
        <a
          href={`/blog/${post.id}`}
          class="bg-surface-white border-border-default group block rounded-xl border p-6 transition-all duration-200 hover:-translate-y-0.5 hover:shadow-md"
        >
          <article class="space-y-3">
            <h2 class="text-text-primary font-sans text-xl font-bold tracking-tight transition-colors group-hover:text-blue-600">
              {post.data.title}
            </h2>

            {post.data.description && (
              <p class="text-text-secondary line-clamp-2 text-sm leading-relaxed">
                {post.data.description}
              </p>
            )}

            <div class="text-text-muted flex items-center gap-3 text-xs font-medium">
              <Time time={post.data.pubDate} />
              <span>·</span>
              <span>{post.readingTime.minutes} min read</span>
              {post.data.author && (
                <>
                  <span>·</span>
                  <span>{post.data.author}</span>
                </>
              )}
            </div>
          </article>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
