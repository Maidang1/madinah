---

<BaseLayout title="Projects - Madinah" description="Projects that I created or maintaining.">
  <div class="min-h-screen py-20">
    <div class="container mx-auto px-4">
      <div class="mb-16 text-center">
        <h1 class="mb-4 text-4xl font-bold tracking-tight sm:text-5xl text-text-primary">
          Projects
        </h1>
        <p class="mx-auto max-w-2xl text-lg text-text-secondary">
          A collection of projects I've built and maintain
        </p>
      </div>

      <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
        {projects.map((project) => (
          <div class="group relative overflow-hidden rounded-lg transition-all duration-300">
            <a
              class="flex items-center gap-x-4 p-4 transition-opacity duration-300 group-hover:opacity-70 focus-visible:rounded-lg focus-visible:ring-2 focus-visible:ring-text-primary/20 focus-visible:ring-offset-2"
              href={project.url ?? project.github}
              target="_blank"
              rel="noreferrer"
            >
              <div>
                <span class="text-3xl">{project.icon}</span>
              </div>
              <div>
                <h3 class="text-text-primary mb-1 text-base font-medium">
                  {project.name}
                </h3>
                <p class="text-text-secondary line-clamp-2 text-sm leading-5">
                  {project.description}
                </p>
              </div>
            </a>
          </div>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>
