---
import type { HTMLAttributes } from 'astro/types';
import { cn } from '../../utils/cn';

interface Props extends HTMLAttributes<'ol'> {}

const { class: className, ...props } = Astro.props;
---

<ol
  class={cn(
    'mb-2 list-none space-y-3 pl-0',
    'text-text-primary/90',
    className
  )}
  {...props}
>
  <slot />
</ol>
