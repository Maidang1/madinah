#!/usr/bin/env sh

# Check if any blog posts or content files are being committed
CONTENT_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(mdx|md)$' | grep -E '(app/routes/blogs\.|app/features/.*/content/)' || true)

if [ -n "$CONTENT_FILES" ]; then
  echo "ðŸ”„ Detected content changes, updating Git history cache..."
  pnpm run git:cache
  
  # Add the updated cache file to this commit
  git add app/data/git-history.json
  echo "âœ… Git history cache updated and staged"
fi
