+  counter-reset: mdx-list;
+}
+
+.mdx-content > * {
+  margin: 0;
+}
+
+.mdx-content p + p,
+.mdx-content p + ul,
+.mdx-content p + ol,
+.mdx-content ul + p,
+.mdx-content ol + p {
+  margin-top: var(--space-stack-md);
+}
+
+.mdx-content h1,
+.mdx-content h2,
+.mdx-content h3,
+.mdx-content h4,
+.mdx-content h5,
+.mdx-content h6 {
+  font-weight: 700;
+  letter-spacing: -0.01em;
+  margin-top: var(--space-stack-lg);
+  margin-bottom: var(--space-stack-sm);
+}
+
+.mdx-content h1 {
+  font-size: clamp(2.25rem, 1.7rem + 1.5vw, 3rem);
+}
+
+.mdx-content h2 {
+  font-size: clamp(1.75rem, 1.35rem + 1vw, 2.375rem);
+}
+
+.mdx-content h3 {
+  font-size: clamp(1.5rem, 1.25rem + 0.5vw, 1.875rem);
+}
+
+.mdx-content h4 {
+  font-size: clamp(1.25rem, 1.1rem + 0.25vw, 1.5rem);
+}
+
+.mdx-content figure,
+.mdx-content blockquote,
+.mdx-content pre,
+.mdx-content table,
+.mdx-content .mdx-media {
+  margin-top: var(--space-stack-lg);
+  margin-bottom: var(--space-stack-lg);
+}
+
+.mdx-content img,
+.mdx-content picture,
+.mdx-content video {
+  border-radius: 1.25rem;
+  width: 100%;
+  height: auto;
+  display: block;
+}
+
+.mdx-content figcaption {
+  margin-top: var(--space-stack-sm);
+  font-size: 0.875rem;
+  color: rgb(113 113 122);
+}
+
+.dark .mdx-content figcaption {
+  color: rgb(161 161 170);
+}
+
+.mdx-content ol {
+  counter-reset: mdx-list;
+  display: flex;
+  flex-direction: column;
+  gap: var(--space-stack-sm);
+  padding-left: var(--space-inline-md);
+}
+
+.mdx-content ol li {
+  counter-increment: mdx-list;
+  position: relative;
+  padding-left: 0.5rem;
+}
+
+.mdx-content ol li::before {
+  content: counter(mdx-list) ".";
+  position: absolute;
+  left: -1.5rem;
+  color: rgb(113 113 122);
+  font-weight: 500;
+}
+
+.dark .mdx-content ol li::before {
+  color: rgb(161 161 170);
+}
+
+.mdx-content ul {
+  display: flex;
+  flex-direction: column;
+  gap: var(--space-stack-sm);
+  padding-left: var(--space-inline-md);
+}
+
+.mdx-content ul li {
+  position: relative;
+  padding-left: 0.5rem;
+}
+
+.mdx-content ul li::before {
+  content: "‚Ä¢";
+  position: absolute;
+  left: -1.5rem;
